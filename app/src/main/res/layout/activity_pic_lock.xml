<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffa9b7b7"

    android:layout_gravity="center_horizontal">

    <TextView

        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lock_text"
        android:id="@+id/input_pic_tv"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.k.superbag2.view.LockView
            android:background="#00a9b7b7"
            android:id="@+id/lockView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_cancel"
        android:id="@+id/pic_lock_cancel_bt"
        android:textSize="20sp"
        android:textColor="@color/light_blue"
        android:layout_gravity="center_horizontal"
        android:background="@null" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_height="wrap_content">
        </LinearLayout>

</LinearLayout>
