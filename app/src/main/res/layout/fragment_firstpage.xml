<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/top_background"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic6" />

                <ImageView
                    android:id="@+id/top_head_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic4" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="245dp"
                    android:layout_toRightOf="@+id/top_head_icon"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/top_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="10天时光里，共8篇日记，5张照片" />

                </LinearLayout>

            </RelativeLayout>

            <ListView
                android:id="@+id/firstPage_lv"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:divider="@drawable/fp_listview_divider"
                android:dividerHeight="5dp"
                android:layerType="software"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>

    </ScrollView>


</LinearLayout>