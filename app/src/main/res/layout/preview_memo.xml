<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="260dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="待办事项"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标 题："/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是标题"
            android:id="@+id/pre_memo_title_tv"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备 注："/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是备注"
            android:id="@+id/pre_memo_content_tv"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日 期："/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:text="提 醒："/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pre_memo_alarm_tv"
                android:padding="5dp"
                android:text="7月29日 9:40 \n 震动"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="80dp"
            android:layout_height="27dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:text="删除"
            android:id="@+id/pre_memo_delete_bt"
            android:background="@drawable/btn_background"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="27dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:text="编辑"
            android:layout_marginLeft="25dp"
            android:id="@+id/pre_memo_edit_bt"
            android:background="@drawable/btn_background"/>
    </LinearLayout>

</LinearLayout>