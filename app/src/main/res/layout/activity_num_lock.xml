<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/num_lock_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:text="请输入密码" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/num_lock_dot1"
            android:padding="5dp"
            android:layout_marginLeft="37dp"
            android:background="@drawable/num_unlock_dot">

        </View>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/num_lock_dot2"
            android:padding="5dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/num_unlock_dot">

        </View>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/num_lock_dot3"
            android:padding="5dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/num_unlock_dot">

        </View>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/num_lock_dot4"
            android:padding="5dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/num_unlock_dot">

        </View>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/num_lock_dot5"
            android:padding="5dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/num_unlock_dot">

        </View>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/num_lock_dot6"
            android:padding="5dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/num_unlock_dot">

        </View>

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/num_lock_delete_bt"
            android:visibility="invisible"
            android:background="@drawable/wrong_dark"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:textSize="20sp"
            android:id="@+id/num_lock_bt2"
            android:textColor="@color/dot_normal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/item_num_lock_back"
            android:text="2"/>
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:textSize="20sp"
            android:id="@+id/num_lock_bt1"
            android:textColor="@color/dot_normal"
            android:layout_toLeftOf="@+id/num_lock_bt2"
            android:layout_marginRight="45dp"
            android:background="@drawable/item_num_lock_back"
            android:text="1"/>
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:textColor="@color/dot_normal"
            android:id="@+id/num_lock_bt3"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/num_lock_bt2"
            android:layout_marginLeft="45dp"
            android:background="@drawable/item_num_lock_back"
            android:text="3"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:textColor="@color/dot_normal"
            android:textSize="20sp"
            android:id="@+id/num_lock_bt5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/item_num_lock_back"
            android:text="5"/>
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/num_lock_bt4"
            android:textColor="@color/dot_normal"
            android:textSize="20sp"

            android:layout_toLeftOf="@+id/num_lock_bt5"
            android:layout_marginRight="45dp"
            android:background="@drawable/item_num_lock_back"
            android:text="4"/>
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/num_lock_bt6"
            android:textColor="@color/dot_normal"

            android:textSize="20sp"
            android:layout_toRightOf="@+id/num_lock_bt5"
            android:layout_marginLeft="45dp"
            android:background="@drawable/item_num_lock_back"
            android:text="6"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <Button
            android:layout_width="45dp"

            android:textSize="20sp"
            android:layout_height="45dp"
            android:id="@+id/num_lock_bt8"
            android:layout_centerHorizontal="true"
            android:textColor="@color/dot_normal"
            android:background="@drawable/item_num_lock_back"
            android:text="8"/>
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/num_lock_bt7"
            android:layout_toLeftOf="@+id/num_lock_bt8"
            android:layout_marginRight="45dp"

            android:textSize="20sp"
            android:textColor="@color/dot_normal"
            android:background="@drawable/item_num_lock_back"
            android:text="7"/>
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/num_lock_bt9"
            android:layout_toRightOf="@+id/num_lock_bt8"
            android:layout_marginLeft="45dp"
            android:textColor="@color/dot_normal"

            android:textSize="20sp"
            android:background="@drawable/item_num_lock_back"
            android:text="9"/>
    </RelativeLayout>

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/num_lock_bt0"
        android:textColor="@color/dot_normal"
        android:background="@drawable/item_num_lock_back"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:text="0"/>

    <Button
        android:id="@+id/num_lock_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="取消"
        android:layout_marginTop="28dp"
        android:textSize="17sp"
        android:textColor="@color/light_blue"/>
</LinearLayout>