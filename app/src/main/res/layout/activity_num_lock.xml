<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="请输入密码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/num_lock_dot1"
            android:padding="5dp"
            android:background="@drawable/num_lock_dot"></View>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/num_lock_dot2"
            android:padding="5dp"
            android:background="@drawable/num_lock_dot"></View>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/num_lock_dot3"
            android:padding="5dp"
            android:background="@drawable/num_lock_dot"></View>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/num_lock_dot4"
            android:padding="5dp"
            android:background="@drawable/num_lock_dot"></View>

        <Button
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/num_lock_delete_bt"
            android:background="@drawable/wrong_dark"/>
    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/num_lock_grid"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="80dp"
        android:numColumns="3"
        android:padding="10dp"
        android:gravity="center"></GridView>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/num_lock_bt0"
        android:background="@drawable/item_num_lock_back"
        android:layout_marginTop="80dp"
        android:text="0"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="取消"
        android:textColor="@color/light_blue"/>
</LinearLayout>